{% extends "BluemesaFliesBundle:Vial:layout.html.twig" %}
{% use "BluemesaSiteTemplateBundle:Form:form.html.twig" %}
{% import "BluemesaSiteTemplateBundle:Macros:form.html.twig" as f %}

{% set source = form.vars.value.source %}

{% block form_header %}
    {{ form_start(form, {'action': path('bluemesa_flies_vial_expand'), 'attr': {'class': 'form-horizontal'} }) }}
{% endblock form_header %}

{% block modal_header %}
  Expand vial {{ source }}
{% endblock modal_header %}

{% block modal_footer %}
  <button type="submit" class="btn btn-primary">Save</button>
  {% if source is not null %}
    <a href="{{ path('bluemesa_flies_vial_show', { 'id': source.id }) }}" class="btn btn-default">Cancel</a>
  {% else %}
    <a href="{{ path('bluemesa_flies_vial_index') }}" class="btn btn-default">Cancel</a>
  {% endif %}
{% endblock modal_footer %}
